<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_main"
    tools:context=".activities.PengaturanNotifikasiActivity">

    <!-- Header / Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:title="Pengaturan Notifikasi"
            app:navigationIcon="@drawable/ic_back_arrow" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card Notifikasi ON/OFF -->
            <androidx.cardview.widget.CardView
                style="@style/CardStyle"
                app:contentPadding="16dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvNotifikasiTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notifikasi Adzan"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/switchNotifikasi"/>
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchNotifikasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card Pilihan Suara Adzan (DENGAN TOMBOL PLAY) -->
            <androidx.cardview.widget.CardView
                style="@style/CardStyle"
                app:contentPadding="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pilih Suara Adzan"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <!-- RadioGroup tetap membungkus untuk pengelompokan visual -->
                    <RadioGroup
                        android:id="@+id/rgSuaraAdzan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Opsi 1: Standar -->
                        <RelativeLayout
                            android:id="@+id/rlAdzanStandar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <RadioButton
                                android:id="@+id/rbAdzanStandar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Standar (Indonesia)"
                                android:textSize="16sp"
                                android:paddingStart="8dp"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/ivPlayStandar"
                                android:clickable="false"
                                tools:ignore="RtlSymmetry" />
                            <ImageView
                                android:id="@+id/ivPlayStandar"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_play_arrow"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:padding="8dp"
                                android:contentDescription="Putar Suara Standar"/>
                        </RelativeLayout>

                        <!-- Opsi 2: Makkah -->
                        <RelativeLayout
                            android:id="@+id/rlAdzanMakkah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <RadioButton
                                android:id="@+id/rbAdzanMakkah"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Adzan Makkah"
                                android:textSize="16sp"
                                android:paddingStart="8dp"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/ivPlayMakkah"
                                android:clickable="false"
                                tools:ignore="RtlSymmetry" />
                            <ImageView
                                android:id="@+id/ivPlayMakkah"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_play_arrow"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:padding="8dp"
                                android:contentDescription="Putar Suara Makkah"/>
                        </RelativeLayout>

                        <!-- Opsi 3: Madinah -->
                        <RelativeLayout
                            android:id="@+id/rlAdzanMadinah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">
                            <RadioButton
                                android:id="@+id/rbAdzanMadinah"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Adzan Madinah"
                                android:textSize="16sp"
                                android:paddingStart="8dp"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/ivPlayMadinah"
                                android:clickable="false"
                                tools:ignore="RtlSymmetry" />
                            <ImageView
                                android:id="@+id/ivPlayMadinah"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_play_arrow"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:padding="8dp"
                                android:contentDescription="Putar Suara Madinah"/>
                        </RelativeLayout>
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
